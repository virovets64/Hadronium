<Window x:Class="Hadronium.ParticleGenerationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add random particles" Height="120" Width="283">
  <Grid>
    <Label Content="Particle count: " HorizontalAlignment="Left" Margin="19,23,0,0" VerticalAlignment="Top"/>
    <TextBox Name="textBoxParticles" HorizontalAlignment="Left" Height="23" Margin="112,23,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="41" TextAlignment="Right"/>
    <Label Content="Link count: " HorizontalAlignment="Left" Margin="19,49,0,0" VerticalAlignment="Top"/>
    <TextBox  Name="textBoxLinks" HorizontalAlignment="Left" Height="23" Margin="112,49,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="41" TextAlignment="Right"/>
    <Button Name="btnOK" IsDefault="True" Content="OK" HorizontalAlignment="Left" Margin="183,22,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>
    <Button IsCancel="True" Content="Cancel" HorizontalAlignment="Left" Margin="183,52,0,0" VerticalAlignment="Top" Width="75"/>

  </Grid>
</Window>
